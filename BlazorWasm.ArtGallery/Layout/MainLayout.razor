@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("enableLoading", true);
            await Task.Delay(1200);
            await JsRuntime.InvokeVoidAsync("gridLayout");
            await JsRuntime.InvokeVoidAsync("loadJs", "theme/js/scripts.js");
            await JsRuntime.InvokeVoidAsync("enableLoading", false);
        }
    }
}